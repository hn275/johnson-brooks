{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@modules/*": ["./src/modules/*"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"],
      "@style/*": ["./src/style/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@shop/*": ["./src/modules/shop/*"]
    },
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "jsxImportSource": "react"
  }
}
