---
import Html from "@layouts/html.astro";
import Layout from "@layouts/layout.astro";
import Logo from "@assets/logo.png";
import HangBoard from "@modules/home/assets/hangboard.jpg";
import Printing from "@modules/home/assets/printing.jpg";
import cx from "classnames";
import { PAGES } from "@lib/routes";
import Link from "@modules/home/components/Link.astro";
---

<Html title="Johnson and Brooks">
  <Layout>
    <div class="flex flex-col justify-center items-center gap-12 min-h-[80vh]">
      <img src={Logo} alt="Johnson and Brooks" class="w-1/2 max-w-7xl" />

      <section class={cx("grid md:grid-cols-2 gap-10")}>
        <Link to={PAGES.shop} img={HangBoard}>Shop</Link>
        <Link to={PAGES.printing} img={Printing}>3D Printing</Link>
      </section>
    </div>
  </Layout>
</Html>
